@using fsr.pring.mvc.projekt.Models;
@model IEnumerable<Partner>
@{
    ViewData["Title"] = "Popis partnera";
}

<h2>Popis partnera</h2>

<table class="table table-sm table-striped table-hover" id="tablepartnera">
    <thead>
        <tr>
            <th>Tip Partnera</th>
            <th>Adresa</th>
            <th>Naziv</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partner in Model)
        {
            <tr>
                <td class="text-center">@partner.PartnerTipoviId</td>
                <td class="text-left">@partner.Adresa</td>
                <td class="text-center">@partner.Naziv</td>
            </tr>
        }
    </tbody>
</table>
@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
}
@section scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>$(document).ready(function () {
      $('#tablepartnera').DataTable({
        language: {
          search: "Pretraga",
          info: "_START_ - _END_ (ukupno _TOTAL_)",
          lengthMenu: "Prikaži _MENU_ zapisa",
          paginate: {
            first: "Prva",
            previous: "Prethodna",
            next: "Sljedeća",
            last: "Zadnja"
          },
          emptyTable: "Nema podataka za prikaz",
          info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
          infoEmpty: "Nema podataka za prikaz",
          infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
        }
      });
    });</script>
}